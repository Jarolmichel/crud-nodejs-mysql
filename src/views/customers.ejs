<%#//esta es la sintaxis correcta para incluir en ejs.%>
<%- include('parte/_header');%>


<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>n*</th>
                        <th>Name</th>
                        <th>Adress</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= (i+1) %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].adress %></td>
                                <td><%= data[i].phone %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>", class="btn btn-danger">Delete</a>
                                    <a href="/update/<%= data[i].id %>", class="btn btn-info">Update</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>

        </div>
        <div class="col-md-5">            
            <div class="card">
                <div class="card-body">
                    <form action="/add", method="post">
                        <div class="frorm-group mt-2">
                            <input type="text", name="name", placeholder="Name", class="form-control">
                        </div>
                        <div class="frorm-group mt-2">
                            <input type="text", name="adress", placeholder="Adress", class="form-control">
                        </div>
                        <div class="frorm-group mt-2">
                            <input type="text", name="phone", placeholder="Phone", class="form-control">
                        </div>
                        <button type="submit", class="btn btn-primary mt-2">
                            Save Customers
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('parte/_footer');%>